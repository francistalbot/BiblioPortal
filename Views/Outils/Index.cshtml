@model IEnumerable<Outil>
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Outils</h2>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Outil</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var outil in Model)
        {
            <tr>
                <td>@outil.Id</td>
                <td>@Html.ActionLink(outil.name, "Details", "Outils",new { id = outil.Id},null)  </td>
                <td>@outil.description</td>
            </tr>
        }
    </tbody>
    </table>